{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "typeRoots": ["chai", "mocha", "mongoose", "restify", "sinon", "supertest"],
    "outDir": "dist"
  },
  "filesGlob": [
    "/app",
    "/config",
    "/test",
    "/utils",
    "server.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
